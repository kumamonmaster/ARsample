<table border="1">
  <tr>
    <th>id</th><th>title</th><th>body</th><th>author</th>
  </tr>
  <% @articles.where(author: "A").limit(3).each do |article| %>
    <tr>
      <td>
        <%= article.id %>
      </td>
      <td>
        <%= article.title %>
      </td>
      <td>
        <%= article.body %>
      </td>
      <td>
        <%= article.author %>
      </td>
    </tr>
  <% end %>
</table>
